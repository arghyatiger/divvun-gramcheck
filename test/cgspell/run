#!/bin/bash

set -e -u

cd "$(dirname "$0")"/../..

check () {
    n="$1"
    shift
    args=( "$@" )
    (
        cd test/cgspell
        set -x
        ../../src/divvun-cgspell -l analyser.hfstol -m errmodel.hfst "${args[@]}" < input."$n" > output."$n"
    )
    if ! diff test/cgspell/output."$n" test/cgspell/expected."$n"; then
        echo diff test/cgspell/output."$n" test/cgspell/expected."$n"
        exit 1
    fi
}

check default
check X -X
check n2 -n 2
